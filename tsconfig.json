{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@utils/*": ["app/utils/*"],
      "@locales/*": ["app/locales/*"],
      "@models/*": ["app/models/*"],
      "@api/*": ["app/api/*"],
      "@store/*": ["app/store/*"],
      "@styles/*": ["app/styles/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
